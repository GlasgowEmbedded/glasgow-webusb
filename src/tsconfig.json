{
    "compilerOptions": {
        "noEmit": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "moduleResolution": "bundler",
        "module": "esnext",
        "target": "es2022",
        "lib": [
            "ES2024",
            "DOM",
            "DOM.Iterable",
        ],
        "strict": true,
        "verbatimModuleSyntax": true,
        "noImplicitAny": true,
    },
    "exclude": [
        "./builder/**/*",
    ],
}
